<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/experiences.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>
    <%- include('partials/header') %>
    <div class="container expDiv"> 
        
        <!-- Search Button Section -->
        <div>
            <form class="form-inline my-2 my-lg-0 pull-right" method="GET" action="/searchExp">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="value" id="expSearchBar">
              <button class="btn btn-secondary my-2 my-sm-0" type="submit"  id="searchIcon"><i class="fa fa-search"></i></button>
            </form>
          </div>
        </div>
    <a href="/addExperience" >
        <h3 class="expSharing" >Want to share your Story?</h3>
    </a>
    <% experienceList.forEach(function(experience, i) { %>
        <div class="tags">
            <p class="contents" style= "word-break: break-all;">
                <%= experience.content %>
            </p>
            <p style="margin-left: 80%;"">tags: <%= experience.tag %></p>
        </div>
    <% }) %>
    </div>
    <%- include('partials/footer') %>
</body>
</html>