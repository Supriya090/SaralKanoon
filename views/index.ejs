<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Sniglet:400,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="navBar">
        <div class="container">

          <!-- Logo Section -->
          <div style="display: flex;">
              <div class="d-none d-lg-block d-md-block">
                <a href="#">
                  <img src="/images/logo.png" id="logo-img" alt="logo" loading="lazy" >
                </a>
              </div>
              <div class="navbar-brand" style="padding-top: 20px;">
                <h1 href="#"><%= title%></h1>
                <h4 ><%= subTitle%></h4>
              </div>
          </div>
          <!-- Navbar Section -->
          <div class="block-display">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto" id="nav-list">
                <li class="nav-item active">
                  <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/categories">Law Categories <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/safetyTips1">Safety Tips <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/experiences">Read Experiences<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="#">About Us <span class="sr-only">(current)</span></a>
                </li>
              </ul>
            </div>

            <!-- Search Button Section -->
            <div class="mr-auto">
              <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchBar">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit"  id="searchIcon"><i class="fa fa-search"></i></button>
              </form>
            </div>
          </div>

          <!-- Toggle Button Section -->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Login/SignUp Section -->
          <div class="navbar-brand block-display d-none d-lg-block">
            <a href="/login"><button type="button" class="btn btn-secondary btn-sm logInButton">Log In</button></a>
            <a href="/signup"><button type="button" class="btn btn-secondary btn-sm logInButton">Sign Up</button></a>
          </div>

          <!-- Login Dropdown Section -->
          <div class="dropdown d-block  d-lg-none">
            <button onclick="myFunction()" class="dropbtn"><i class="fa fa-caret-down"></i></button>
            <div id="myDropdown" class="dropdown-content">
              <a href="/login">Log In</a>
              <a href="/signup">Sign Up</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Dropdown Script -->
    <script src="/javascripts/index.js"></script>
      
    <!-- Main Content Begins -->
    <div class="container mainContent">

      <div class="jumbotronContent">
        <div class="jumbotron gradient active"></div>
        <div class="descriptionText">
          <h3 id ="title"><%=title%></h3><p id= "subTitle"><%=subTitle%></p>
          <p>Find simplified version of laws related to safety.<br>You can also post your experiences and read the ones written by others.</p> 
        </div>
      </div>

      <!-- Categories Section -->
      <hr>
      <h3>Law Categories</h3>
      <div class="row">
        <% categoryList.forEach(function(category, i){ %>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <a href = "http://localhost:3000/categories#<%=i%>C" onclick="">
              <div class="category-tile">
                <img src="<%= category.image%>", alt="<%= category.title%> Image", class="categoryImage">
                <span><%=category.title%></span>
              </div>
            </a>
          </div>
        <%})%>
      </div>
      <div class="seeMore"><a href="/categories" class="moreLink">See More</a></div>

      <!-- Safety Tips Section -->
      <hr>
      <h3>Safety Tips</h3>
      <div class="row">
        <% safetyTipList.forEach(function(tip, i){ %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <a href="/safetyTips<%=i%>" onclick="">
              <div class="category-tile">
                <img src="<%= tip.image%>", alt="<%= tip.title%> Image", class="categoryImage">
                <span><%=tip.title%></span>
              </div>
            </a>
          </div>
        <%})%>
      </div>

      <!-- Experiences Section -->
    <hr>
      <h3 class="experienceTitle">Experiences</h3>
          <div>
            <a href="#" onclick="">
              <div class="category-tile experienceTile">
                <span>Sexual Assault</span>
              </div>
            </a>
          </div>
      </div>

      <!-- Footer Section -->
    <footer class="panel-footer">
      <div class="container">
        <div class="text-center">
          <div>
            <a href="#"><i class="fa fa-facebook-official socialMediaIcons" style="font-size: 36px;"></i></a>
            <a href="#"><i class="fa fa-instagram socialMediaIcons" style="font-size: 36px;"></i></a>
            <a href="#"><i class="fa fa-twitter socialMediaIcons" style="font-size: 36px;"></i></a>
            <a href="#"><i class="fa fa-google socialMediaIcons" style="font-size: 36px;"></i></a>
          </div>
          <hr style="background-color: white;">
          &copy; Copyright <%=title%> 2020
        </div>
      </div>
    </footer>

</body>
</html>
