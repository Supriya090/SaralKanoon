<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  </head>

  <body>
    <%if(isLoggedIn){%>
      <%- include('partials/loggedInHeader') %>
    <%}else{%>  
      <%- include('partials/header') %>
    <%}%>  
    <!-- Main Content Begins -->
    <div class="container mainContent">

      <div class="jumbotronContent">
        <div class="jumbotron gradient active"></div>
        <div class="descriptionText">
          <h3 id ="title"><%=title%></h3><p id= "subTitle"><%=subTitle%></p>
          <p>Find simplified version of laws related to safety.<br>You can also post your experiences and read the ones written by others.</p> 
        </div>
      </div>

      <!-- Categories Section -->
      <hr>
      <h2>Law Categories</h2>
      <div class="row" style="margin-bottom: 30px;">
        <% categoryList.forEach(function(category, i){ %>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <a href = "http://localhost:3000/categories#<%=i%>C" onclick="">
              <div class="category-tile">
                <img src="<%= category.image%>", alt="<%= category.title%> Image", class="categoryImage">
                <span><%=category.title%></span>
              </div>
            </a>
          </div>
        <%})%>
      </div>
      <div class="seeMore"><a href="/categories" class="moreLink">See More....</a></div>

      <!-- Safety Tips Section -->
      <hr>
      <h2>Safety Tips</h2>
      <div class="row" style="margin-bottom: 40px;">
        <% safetyTipList.forEach(function(tip, i){ %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <a href="/safetyTips<%=i%>" onclick="">
              <div class="category-tile">
                <img src="<%= tip.image%>", alt="<%= tip.title%> Image", class="categoryImage" >
                <span><%=tip.title%></span>
              </div>
            </a>
          </div>
        <%})%>
      </div>

      <!-- Experiences Section -->
    <hr>
      <h2 class="experienceTitle">Experiences</h2>
          <div class="readExperiences" style="margin-bottom: 50px;">
            <a href="/experiences" onclick="">
              <div class="category-tile experienceTile">
                <span>Read Users' Experiences</span>
              </div>
            </a>
          </div>
      </div>

      <!-- Footer Section -->
      <%- include('partials/footer') %>
</body>
</html>
