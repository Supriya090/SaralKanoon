    <!-- Sexual Offence -->
    <div id="SexualOffence">
      <h2 id="0C">Sexual Offence Laws</h2> <br>
      <div class="row" style="margin-bottom: 30px;">
          <%sexualAssaultCategoriesList.forEach(function(sexualAssaultCategory){%>
            <div class="col-md-4 col-sm-6 col-xs-12" style="margin-bottom: 15px;" >
              <a href="/sexual-assault/<%=sexualAssaultCategory.title%>" onclick="">
