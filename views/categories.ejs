                      <img src="<%=cyberLawCategory.image%>" class="rounded float-left images" alt="<%=cyberLawCategory.title%>" >
                      <span><%=cyberLawCategory.title%></span>
                    </div>
                  </a>
                </div>
              <%})%>
            </div>
        </div>
    </div>
