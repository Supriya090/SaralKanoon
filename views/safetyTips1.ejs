<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/safety.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <header>
        <nav class="navbar" id="navBar">
            <div class="verticalDivider"></div>
            <form class="form-inline safety-nav">
              <a class="btn Left" id="topBtn" href="/safetyTips0">Self Defense Techniques</a>
              <a class="btn Right" id="topBtn" href="/safetyTips1">Self Defense Equipments</a>
            </form>
        </div>
          </nav>
    </header>
    <div class="container" style="margin-top: 60px;">
            <!-- Sexual Offence -->
            <div>
                <div class="row">
                    <%safetyEquipmentList.forEach(function(equipment){ %>
                      <div class="col-md-4 col-sm-6 col-xs-12 equipDiv">
                          <div class="category-tile equip-tile">
                            <img src="<%= equipment.image%>" style="width: 100%; height: 100%;" alt="<%= equipment.title%> Image">
                            <span><%= equipment.title%></span>
                          </div>
                        <div class="equipDescription">
                            <h4>How to Use?</h4>
                            <p> <%= equipment.description%>
                            </p>
                            <div class="seeMore"><a href="<%= equipment.link%>" style="color: #7e57c2;" target="blank">Learn More</a></div>
                        </div>
                      </div>
                    <%})%>
                  </div>
                  <hr>
            </div>
    </div>

</body>
</html>
